extends layout

block content
  .container
    form.form-signin(method='post', action='', role='form')
      h2.form-signin-heading Please Login
      .form-group
        input.form-control(name='phone', type='number', placeholder='Your phone')
      .form-group
        input.form-control(name='password', type='password', placeholder='Your password')
      .form-group
        input(type='hidden', name='client_id', value='#{client_id}')
        input(type='hidden', name='redirect_uri', value='#{redirect_uri}')
      .form-group
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

    a(href="/register") sign up
